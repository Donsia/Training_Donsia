#include<stdio.h>
#include<conio.h>
unsigned invert(int num,int pos,int bits)
	{
		int temp=0;
		temp=(~0)<<bits;
		temp=(~temp);
		temp=(temp>>bits-pos-1);
		return (num^temp);
	}
void main()
	{
		unsigned number=0,position=0,totalbits=0;
		clrscr();
		printf("enter number");
		scanf("%u",&number);
		printf("enter pos");
		scanf("%d",&position);
		printf("enter bits");
		scanf("%d",&totalbits);
		printf("%u",invert(number,position,totalbits));
		getch();
	}

